<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ff_pop_menu_animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="listViewTheme">
        <item name="android:divider">@color/ff_line</item>
        <item name="android:dividerHeight">@dimen/ff_line_thin</item>
        <item name="android:cacheColorHint">@color/ff_alpha</item>
        <item name="android:listSelector">@color/ff_alpha</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="FFProgressDialogStyle" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowBackground">@drawable/alpha</item>
        <!-- 背景透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明  <item_image_gallery name="android:windowContentOverlay">@null</item_image_gallery> -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="FFProgressDialogStyle2" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


</resources>