<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical"
    android:paddingBottom="27dp">

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fengnian.smallyellowo.foodie.widgets.DynamicImageView
            android:id="@+id/iv_img_1"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_alignParentLeft="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@+id/tv_content_1"
            android:background="@color/image_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_content_1"
            android:layout_width="@dimen/detail_modern_text_width"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img_1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/padding_18"
            android:layout_marginRight="@dimen/padding_18"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/modern_text_content_color"
            android:textSize="@dimen/font_size_2"
            tools:text="菜品内容描述菜品内容描述菜品内容描述菜品内容描述菜品内容描述菜品内容描述" />

        <TextView
            android:id="@+id/tv_dish_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img_1"
            android:layout_alignLeft="@+id/iv_img_1"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:shadowColor="@color/white_shadow_color"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/font_size_2"
            tools:text="菜品名称" />

        <ImageView
            android:id="@+id/iv_comment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_img_1"
            android:layout_alignTop="@+id/iv_img_1"
            android:layout_marginLeft="@dimen/padding_small"
            android:src="@drawable/ei_ic_good" />

        <TextView
            android:id="@+id/image_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_img_1"
            android:layout_marginLeft="-23dp"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_toRightOf="@+id/iv_img_1"
            android:textColor="@color/black_color"
            android:textSize="44dp"
            tools:text="22" />

    </RelativeLayout>

