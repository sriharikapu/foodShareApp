<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_more"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onBackPressed">

    <LinearLayout
        android:id="@+id/v_more_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/ugc_edit_more_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:onClick="onClick"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/food_type_disable" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_zc"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="早餐"
                    android:textColor="@color/ff_text_black"
                    android:textSize="12dp" />

                <CheckBox
                    android:id="@+id/cb_zwc"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="早午餐"
                    android:textColor="@color/ff_text_black"
                    android:textSize="12dp" />

                <CheckBox
                    android:id="@+id/cb_wuc"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="午餐"
                    android:textColor="@color/ff_text_black"
                    android:textSize="12dp" />

                <CheckBox
                    android:id="@+id/cb_xwc"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="下午茶"
                    android:textColor="@color/ff_text_black"
                    android:textSize="12dp" />

                <CheckBox
                    android:id="@+id/cb_wanc"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="晚餐"
                    android:textColor="@color/ff_text_black"
                    android:textSize="12dp" />

                <CheckBox
                    android:id="@+id/cb_yx"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_type_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:text="夜宵"
                    android:textColor="@color/ff_text_black"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ff_line_thin"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_people_num"
                android:layout_width="0dp"
                android:layout_height="49.5dp"
                android:layout_weight="1"
                android:background="#0000"
                android:drawableLeft="@mipmap/food_people_num_enable"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="人数"
                android:inputType="number"
                android:maxLength="2"
                android:singleLine="true"
                android:textColor="@color/ff_text_black"
                android:textColorHint="@color/ff_text_gray"
                android:textSize="13sp" />

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@color/line" />


            <EditText
                android:id="@+id/tv_total_money"
                android:layout_width="0dp"
                android:layout_height="49.5dp"
                android:layout_weight="1"
                android:background="#0000"
                android:drawableLeft="@mipmap/food_money_enable"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="总价"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="@color/ff_text_black"
                android:textColorHint="@color/ff_text_gray"
                android:textSize="13sp" />

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/food_cover_enable" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_title"
                    android:layout_toRightOf="@+id/iv_title"
                    android:hint="封面设置"
                    android:textColor="@color/ff_text_black"
                    android:textColorHint="@color/ff_text_gray"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_title_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/arrow_goto_cover" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ff_line_thin"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_remark"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:src="@mipmap/ic_remark_selected" />

            <com.fengnian.smallyellowo.foodie.widgets.XCFlowLayout
                android:id="@+id/et_cjbq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#0000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <CheckBox
                android:id="@+id/cb_gzrwc"
                android:layout_width="0dip"
                android:layout_height="23dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/food_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="工作日午餐"
                android:textColor="@color/ff_text_black"
                android:textSize="12dp" />

            <CheckBox
                android:id="@+id/cb_zmjc"
                android:layout_width="0dip"
                android:layout_height="23dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/food_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="周末聚餐"
                android:textColor="@color/ff_text_black"
                android:textSize="12dp" />

            <CheckBox
                android:id="@+id/cb_gmxwc"
                android:layout_width="0dip"
                android:layout_height="23dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/food_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="闺蜜下午茶"
                android:textColor="@color/ff_text_black"
                android:textSize="12dp" />

            <CheckBox
                android:id="@+id/cb_yrs"
                android:layout_width="0dip"
                android:layout_height="23dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/food_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="一人食"
                android:textColor="@color/ff_text_black"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/food_type_bg_normal"
                android:ems="10"
                android:hint="请输入标签内容"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btn_ok_remark"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:text="完成"
                android:textColor="@color/button_edit_more_remark"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />
    </LinearLayout>
</FrameLayout>