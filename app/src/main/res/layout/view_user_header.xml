        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="@drawable/user_avatar_circle"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar_circle_gray" />

        <TextView
            android:id="@+id/tv_222"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_below="@+id/iv_avatar"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/userinfo_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_avator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="name"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_set_nickname"
            style="@style/userinfo_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text=""
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="137dp"
            android:layout_toRightOf="@+id/tv_222"
            android:paddingLeft="15dp"
            android:src="@mipmap/new_boy_one" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_avator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_name"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:src="@mipmap/iv_edit_user_info" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dynamic"
                style="@style/userinfo_text_shadow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="动态 0"
                android:textSize="13sp"
                android:visibility="gone" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_attention"
                style="@style/userinfo_text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="关注 0"
                android:textSize="13sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="#fff" />

            <TextView
                android:id="@+id/tv_fans"
                style="@style/userinfo_text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="粉丝 0"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign"
            style="@style/userinfo_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:lines="1"
            android:text=""
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dynamic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:background="@color/white_bg"
        android:orientation="vertical"
        android:paddingBottom="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="11dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_point"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_2"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_milestone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_point"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_2"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_admire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_point"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_2"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_count_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dynamic_layout"
        android:layout_marginTop="10dp"
        android:background="@color/white_bg"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_count"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/title_text_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/food_type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_count_ll"
        android:background="@color/white_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <!--<TextView
            android:id="@+id/share_count"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
