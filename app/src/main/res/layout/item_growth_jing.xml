<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/growth_gray_bg"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="7dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/ll_complete_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="6dp"
            android:background="@color/image_bg"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_img"
            android:layout_toRightOf="@+id/iv_img"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignLeft="@+id/tv_content"
            android:drawableLeft="@mipmap/growth_score_"
            android:drawablePadding="5dp"
            android:text="TextView"
            android:textColor="#ffb400" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignRight="@+id/iv_img"
            android:layout_margin="5dp"
            android:text="20å¼ "
            android:textColor="#fff"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>