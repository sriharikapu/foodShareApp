<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="25dp">

    <TextView
        android:id="@+id/sku_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/score_shop_line_1"
        android:drawablePadding="6dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/padding_middle"
        android:text="商品介绍"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/font_size_3_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <TextView
        android:id="@+id/sku_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="4dp"
        android:paddingLeft="@dimen/padding_middle"
        android:paddingRight="@dimen/padding_middle"
        android:textColor="@color/color_2"
        android:textSize="@dimen/font_size_2_1"
        tools:text="不久前小米手环2接入了蚂蚁森林,用户已经可以用其在蚂蚁森林上“种树”。现在官方又暗示,小米手环2近期可能会迎来骑行监测功能" />

</LinearLayout>