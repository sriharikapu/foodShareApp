<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_header"
        android:textColor="#333"
        android:textSize="15dp" />

    <RatingBar
        android:id="@+id/rb_level"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_header"
        android:isIndicator="true"
        android:maxHeight="10dp"
        android:minHeight="10dp"
        android:numStars="4"
        android:progressDrawable="@drawable/selector_rating_dynamic"
        android:rating="2" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/rb_level"
        android:textColor="#ff5d00"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/tv_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_distance"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_header"
        android:drawableLeft="@mipmap/want_eat_detail_zhonglei"
        android:drawablePadding="8dp"
        android:textColor="#999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_distance"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_species"
        android:textColor="#999"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_header"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:drawableLeft="@mipmap/want_eat_detail_shangquan"
        android:drawablePadding="8dp"
        android:textColor="#999"
        android:textSize="13dp" />

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_header"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/view_5"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ddd"></View>

        <RelativeLayout
            android:id="@+id/rl_like_eat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_5"
            android:background="@drawable/item_contact_friend_selector">

            <TextView
                android:id="@+id/tv_friend_like_eat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/friend_want_eat_detail"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text=""
                android:textColor="#333"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arrow_left" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_like_eat"
            android:background="@drawable/item_contact_friend_selector">

            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ddd"></View>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/want_eat_detail_location"
                android:drawablePadding="8dp"
                android:padding="10dp"

                android:text=""
                android:textColor="#333"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arrow_left" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_adress"
            android:background="@drawable/item_contact_friend_selector">

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ddd"></View>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/arrow_left" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/want_eat_detail_phone"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text=""
                android:textColor="#333"
                android:textSize="13dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_1"
        android:background="@color/normal_bg" />

    <include
        android:id="@+id/ll_remark"
        layout="@layout/view_rest_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_2" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_remark"
        android:padding="10dp"
        android:text="好友的相关分享"
        android:textColor="#666"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/tv_1"
        android:background="#ddd"></View>

    <ImageView
        android:id="@+id/iv_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

</RelativeLayout>