<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parent_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/choose_item_height"
        android:paddingLeft="@dimen/padding_middle">


        <TextView
            android:id="@+id/parent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="朝阳区"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/font_size_4" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_middle"
            android:src="@mipmap/restrestult_checked" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignBottom="@+id/parent_item"
        android:background="@color/gray_bg_new" />
</RelativeLayout>