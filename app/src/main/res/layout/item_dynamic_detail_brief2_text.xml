<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brief2_style_bg"
    android:orientation="horizontal"
    android:padding="@dimen/padding_middle">

    <ImageView
        android:id="@+id/left_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/brief2_style_left_comma" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_comma"
        android:layout_toLeftOf="@+id/right_comma"
        android:layout_toRightOf="@+id/left_comma"
        android:lineSpacingMultiplier="1.6"
        android:textColor="@color/ff_text_black"
        android:textSize="14sp"
        tools:text="内容描述内容描述内容描述内容描述内容。描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述内容描述" />

    <ImageView
        android:id="@+id/right_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/brief2_style_right_comma" />
</RelativeLayout>