<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/s_status_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <RelativeLayout
        android:id="@+id/title_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ff_actionbarHight">

        <ImageView
            android:id="@+id/my_back_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ff_actionbarHight"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ff_ic_back_pressed" />

        <TextView
            android:id="@+id/tv_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:singleLine="true"
            android:text="@string/dining_work_title"
            android:textColor="@color/ff_text_actionbar"
            android:textSize="@dimen/font_size_5_1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dining_share_title2_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_middle"
        android:paddingRight="@dimen/padding_middle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="我的午餐列表"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/font_size_4_1" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/dining_working_title_bg"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="0条"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/font_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/dining_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/dining_add" />

        <ImageView
            android:id="@+id/dining_get_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/dining_get" />

        <ImageView
            android:id="@+id/dining_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/dining_share" />
    </LinearLayout>
</LinearLayout>