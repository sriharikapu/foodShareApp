<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fengnian.smallyellowo.foodie.widgets.DynamicImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_content_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:background="@drawable/brief_head_bg" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginTop="@dimen/padding_big"
        android:src="@drawable/_brief_ei_ic_good" />

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_content"
        android:layout_alignLeft="@+id/iv_img"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginBottom="@dimen/padding_middle"
        android:layout_marginLeft="@dimen/padding_small"
        android:background="@drawable/brief_head_viewpager_item_food_bg"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/font_size_3"
        tools:text="红烧牛腩" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/padding_small"
        android:layout_marginRight="@dimen/padding_small"
        android:gravity="top|left"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white_bg"
        android:textSize="@dimen/font_size_3"
        tools:text="这道菜很好吃，望眼欲穿，口水直流" />
</RelativeLayout>