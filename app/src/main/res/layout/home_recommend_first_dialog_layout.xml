<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/dialog_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="53dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_middle"
                android:layout_marginRight="@dimen/padding_middle"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/home_recommend_first_tips"
                android:textColor="@color/title_text_color"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/round_primary_btn_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/title_text_color"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-53dp"
            android:src="@drawable/recommend_dialog_icon" />
    </RelativeLayout>
</LinearLayout>