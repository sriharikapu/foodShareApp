<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff">
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"

                android:text="密码"/>
            <EditText
                android:id="@+id/ed_password"
                android:layout_toRightOf="@+id/tv_1"
                android:background="@null"
                android:textColorHint="#888888"

                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/edtext_cursor_style"
                android:hint="请输入密码"
                android:maxLength="13"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_pas_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:visibility="gone"
                android:src="@drawable/ed_text_delte"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_1"
            android:layout_below="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"></View>
        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_below="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="确认密码"/>
            <EditText
                android:id="@+id/ed_confire_password"
                android:layout_toRightOf="@+id/tv_2"
                android:background="@null"
                android:textColorHint="#888888"
                android:hint="请输入密码"
                android:maxLength="13"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/edtext_cursor_style"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_confir_pas_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:visibility="gone"
                android:src="@drawable/ed_text_delte"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@drawable/logout_press"
        android:textColor="#fff"
        android:text="提交"/>

</RelativeLayout>