<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
       >



        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="#fff"
            android:layout_marginTop="26.5dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#333"
                android:text="好吃不胖"
                android:textSize="15dp"/>
               <ImageView
                   android:id="@+id/iv_erweima"
                   android:layout_width="350dp"
                   android:layout_height="350dp"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                  />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/iv_erweima_icon"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:textColor="#888"
                     android:textSize="13dp"
                     android:layout_below="@+id/iv_erweima"
                     android:layout_marginTop="20dp"
                     android:layout_marginBottom="20dp"
                     android:text="扫一扫二维码图案，加我吧"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/user_avatar_circle"
            android:scaleType="centerCrop"
            android:padding="2dp"
            android:src="@drawable/user_avatar_circle_gray"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</RelativeLayout>