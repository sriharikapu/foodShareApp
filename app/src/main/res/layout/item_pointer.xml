<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
    <TextView
    android:id="@+id/tv_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:textSize="13dp"
        android:textColor="#888"
    android:text="2016-8-17"/>

    <TextView
        android:id="@+id/tv_point"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:textSize="18dp"
        android:textColor="#ffd800"
        android:text="2016-8-17"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginRight="10dp"
        android:background="@mipmap/arrow_top"
        />

    </RelativeLayout>
    <View
        android:id="@+id/tv_lin"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_1"
        android:layout_height="0.1dp"
        android:background="#ddd"
        />
    <com.fengnian.smallyellowo.foodie.widgets.MyListView
        android:id="@+id/child_listview"
        android:visibility="gone"
        android:layout_below="@+id/tv_lin"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.fengnian.smallyellowo.foodie.widgets.MyListView>



</RelativeLayout>