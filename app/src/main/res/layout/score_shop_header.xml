<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/score_shop_icon_1"
                android:drawablePadding="4dp"
                android:text="积分"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/font_size_3_2" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/right_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/score_shop_icon_2"
                android:drawablePadding="4dp"
                android:text="兑换记录"
                android:textColor="@color/title_text_color"
                android:textSize="@dimen/font_size_3_2" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_small"
        android:background="@color/normal_bg" />

    <ImageView
        android:id="@+id/score_lottery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/score_shop_icon_3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_small"
        android:background="@color/normal_bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/score_shop_line_1"
        android:drawablePadding="6dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/padding_middle"
        android:text="积分兑换"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/font_size_3_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
</LinearLayout>