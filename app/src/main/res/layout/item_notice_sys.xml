<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notice_item_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@mipmap/notice_action" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="活动开始啦"
        android:textColor="@color/ff_text_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:text="2016-1-1"
        android:textColor="#aaa"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"
        android:layout_below="@+id/iv_img"
        android:paddingBottom="8dp"
        android:paddingRight="15dp"
        android:textColor="@color/ff_text_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_vis_all_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/drawable_bg_visall"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="15dp"
        android:paddingTop="2dp"
        android:text="查看全文"
        android:drawableRight="@mipmap/dish_down"
        android:drawablePadding="4dp"
        android:textColor="@color/ff_text_black"
        android:textSize="13sp" />
</RelativeLayout>