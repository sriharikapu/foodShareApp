<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/iv_add_crown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:background="@mipmap/small_bg_is_add_crow"/>

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="14dp"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:text="极力推荐"
        android:textColor="@color/ff_text_black"
        android:textSize="11sp" />


    <RatingBar
        android:id="@+id/rb_level"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginRight="6dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/tv_level"
        android:isIndicator="true"
        android:maxHeight="10dp"
        android:minHeight="10dp"
        android:numStars="4"
        android:progressDrawable="@drawable/selector_rating_dynamic"
        android:rating="2" />

    <View
        android:layout_width="1px"
        android:layout_height="16dp"
        android:id="@+id/v_line_level"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_level"
        android:background="@color/line" />
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@+id/iv_head"
        android:text="刘德华"
        android:textColor="#333"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_head"
        android:text="2016_10_1"
        android:textColor="#999"
        android:textSize="9dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/want_eat_detail_sanjiao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/lin_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_lin_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_lin_2"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_lin_3"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLength="30"
            android:text="德州风味"
            android:textColor="#666"
            android:paddingBottom="10dp"
            android:textSize="15dp" />
    </LinearLayout>
</RelativeLayout>