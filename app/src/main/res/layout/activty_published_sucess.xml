<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <TextView
        android:id="@+id/tv_share_and_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="保存成功!"
        android:drawablePadding="15dp"
        android:textColor="#333"
        android:drawableTop="@mipmap/save_sucessful"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_share_and_save"
        android:text="(已保存到个人中心)"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:textColor="#666"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_1"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        android:textColor="#333"
        android:text="分享至"/>

    <TextView
        android:id="@+id/tv_wechat_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:layout_toLeftOf="@+id/tv_circle_friend"
        android:layout_marginTop="20dp"
       android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:text="微信好友"
        android:drawablePadding="6dp"
        android:drawableTop="@mipmap/pub_succ_wechat_friends"/>
    <TextView
        android:id="@+id/tv_circle_friend"

        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="朋友圈"
        android:drawablePadding="6dp"
        android:drawableTop="@mipmap/pub_succ_wechat_pyq"/>
    <TextView
        android:id="@+id/tv_sina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_2"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_circle_friend"
        android:layout_centerHorizontal="true"
        android:text="新浪微博"
        android:drawablePadding="6dp"
        android:drawableTop="@mipmap/pub_succ_sina"/>





        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"

            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_wechat_friend"
            android:layout_centerHorizontal="true"
            android:drawableTop="@mipmap/ic_share_content"
            android:gravity="center"
            android:text="内容快照"
            android:textColor="#555555"
            android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_circle_friend"
        android:layout_toLeftOf="@+id/tv_circle_friend"
        android:drawableTop="@mipmap/ic_share_cover"
        android:gravity="center"
        android:text="封面快照"
        android:textColor="#555555"
        android:textSize="16sp" />


</RelativeLayout>