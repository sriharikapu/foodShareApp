<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shixin_circle"/>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余邀请次数"
            android:textColor="#333333"
            android:textSize="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"/>

        <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_1"
        android:textStyle="bold"
        android:text=""
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>
        <TextView
            android:id="@+id/tv_2"
            android:layout_toRightOf="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1"
            android:text="次"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:layout_centerHorizontal="true"
            android:textSize="19dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <TextView
          android:id="@+id/tv_sucess_invite"
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:textSize="15dp"
          android:textColor="#888888"
          android:text="您成功邀请0位好友加入小黄圈"
          android:background="@color/normal_bg"
          android:gravity="center"/>
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_below="@+id/tv_sucess_invite"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#888888"
                android:text="昵称"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#888888"
                android:layout_alignParentRight="true"
                android:text="加入时间"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:gravity="center"/>


        </RelativeLayout>

        <ListView
            android:id="@+id/lv_listview"
            android:layout_below="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/item_contact_friend_selector"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:layout_alignParentBottom="true">

       <TextView
           android:id="@+id/tv_invite_wechat"
           android:gravity="center"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/gengxin_selector"
           android:textColor="#333333"
           android:textSize="16dp"
           android:text="邀请微信好友"/>

    </FrameLayout>

</RelativeLayout>