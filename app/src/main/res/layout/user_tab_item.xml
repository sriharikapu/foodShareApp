<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stick_nav_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_tab_height">

    <RelativeLayout
        android:id="@+id/tab_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/user_tab_line_width">

        <TextView
            android:id="@+id/tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/font_size_3_2"
            tools:text="美食记录" />

        <View
            android:id="@+id/tab_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_alignLeft="@+id/tab_title"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tab_title"
            android:background="@color/colorPrimary" />
    </RelativeLayout>

</RelativeLayout>