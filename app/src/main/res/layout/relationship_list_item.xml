<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/item_contact_friend_selector"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/userView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/sectionNameView"
       >
        <ImageView
            android:id="@+id/iv_add_crown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:visibility="gone"
            android:background="@mipmap/small_bg_is_add_crow"/>
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
       />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_header"
          android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:maxLength="10"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/tv_content"

            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:textColor="#888888"
            android:textSize="12dp"
            android:maxLength="16"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
        <ImageView
            android:id="@+id/iv_is_attion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             />
        <TextView
            android:id="@+id/tv_is_attion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相互关注"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/iv_is_attion" />

        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ddd"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_header"></View>
    </RelativeLayout>

    <TextView
        android:id="@+id/sectionNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textColor="#454554"
        android:paddingLeft="7dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="A"
        android:background="@color/normal_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>