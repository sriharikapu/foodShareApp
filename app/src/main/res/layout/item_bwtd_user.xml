<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/user_avatar_circle_gray" />
    <View
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_below="@+id/iv_header"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_header"
        android:layout_toEndOf="@+id/iv_header"
        android:textSize="12sp"
        android:textColor="@color/ff_text_black"
        android:layout_toRightOf="@+id/iv_header"
        android:text="名字" />

    <TextView
        android:id="@+id/tv_poi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_header"
        android:layout_toEndOf="@+id/iv_header"
        android:textSize="11sp"
        android:textColor="@color/ff_text_gray"
        android:layout_toRightOf="@+id/iv_header"
        android:text="餐厅名称" />

    <TextView
        android:id="@+id/tv_zpjf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中拍积分"
        android:textColor="@color/ff_text_gray"
        android:textSize="11sp"
        android:layout_marginRight="8dp"
        android:layout_alignBaseline="@+id/tv_bx"
        android:layout_alignBottom="@+id/tv_bx"
        android:layout_toLeftOf="@+id/tv_bx"
        android:layout_toStartOf="@+id/tv_bx" />

    <TextView
        android:id="@+id/tv_bx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_poi_name"
        android:layout_alignBottom="@+id/tv_poi_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="报销"
        android:textColor="@color/ff_text_gray"
        android:textSize="11sp" />
</RelativeLayout>