<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_nine_pic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dynamic_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_dynamic_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_dynamic_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dynamic_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_dynamic_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_dynamic_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dynamic_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_dynamic_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/image_bg"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:id="@+id/fl_dynamic_lastImage_container"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/iv_dynamic_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/image_bg"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_dynamic_moreImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:background="#66000000"
                    android:gravity="center"
                    android:text="更多>"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dynamic_mssj_only"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/image_bg"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_dynamic_msbj_only"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="left|top"
        android:layout_marginTop="5dp"
        android:background="@color/image_bg"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_jing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:src="@mipmap/dynamic_is_star" />

</FrameLayout>
