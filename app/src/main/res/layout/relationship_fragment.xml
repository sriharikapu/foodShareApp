<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg">

    <RelativeLayout
        android:id="@+id/head_id"
        android:visibility="gone"
        android:background="@color/normal_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_width">
        <TextView
            android:id="@+id/relationship_title_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="社交"
            android:layout_centerInParent="true"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/title_text_color"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/add_new_relation_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_friend"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"
            android:layout_alignParentBottom="true"
            ></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ListView
            android:id="@+id/contact_list"
            style="@style/listViewTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_bg"
            />


        <!--<com.fengnian.smallyellowo.foodie.appbase.FastSectionBar-->
            <com.fengnian.smallyellowo.foodie.widgets.SideBar
            android:id="@+id/fast_scroller"
            android:layout_marginTop="52dp"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
             />
        <!--android:src="@drawable/dic_background"-->

        <TextView
            android:id="@+id/tv_center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ccc"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="35dp"
            android:textColor="@color/white_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"></View>
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您暂时还没有好朋友啊"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_2"
            android:layout_below="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去看看是否已经有好友在小黄圈里了"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/iv_1"
            android:layout_below="@+id/tv_2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/no_contact_friend"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_1"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            >
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="或者去"
                android:paddingTop="3dp"
                android:textSize="16dp"/>
            <TextView
                android:paddingBottom="3dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:id="@+id/tv_master_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达人荐"
                android:textColor="#ffd800"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/tv_4"
                android:paddingTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找到感兴趣的人关注吧"
                android:textSize="16dp"/>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>