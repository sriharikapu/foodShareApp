<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notice_item_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@mipmap/notice_xhq_canceled" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="活动开始啦"
        android:textColor="#dddddd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:text="2016-1-1"
        android:textColor="#f3f3f3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"
        android:layout_below="@+id/iv_img"
        android:paddingRight="15dp"
        android:text="New Text"
        android:textColor="#dddddd"
        android:textSize="14sp" />

    <View
        android:id="@+id/v"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_watch_detail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/v"
        android:drawableRight="@mipmap/restinfo_right_arrow"
        android:gravity="center_vertical"
        android:paddingLeft="58dp"
        android:paddingRight="12dp"
        android:text="查看详情"
        android:textColor="#dddddd"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_watch_detail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/notice_canceled" />
</RelativeLayout>