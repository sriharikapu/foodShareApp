<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:paddingLeft="@dimen/padding_middle"
    android:paddingRight="@dimen/padding_middle"
    android:paddingTop="40dp">

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/padding_big"
        android:background="@drawable/detail_eat_title_normal"
        android:drawableLeft="@drawable/detail_eat_foot_title_left"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/china_style_font_color"
        android:textSize="@dimen/font_size_3_2"
        tools:text="菜" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dish_name"
        android:layout_marginBottom="@dimen/padding_small"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/china_style_font_color_gray"
        android:textSize="@dimen/font_size_3"
        tools:text="菜品内容描述" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_content"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/img_top_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_img"
        android:layout_alignRight="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:background="@drawable/detail_china_eat_image_bg_top" />

    <ImageView
        android:id="@+id/img_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignLeft="@+id/iv_img"
        android:layout_alignRight="@+id/iv_img"
        android:background="@drawable/detail_china_eat_image_bg_bottom" />

    <ImageView
        android:id="@+id/img_left_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignLeft="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:background="@drawable/detail_china_eat_image_bg_left" />

    <ImageView
        android:id="@+id/img_right_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignRight="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:background="@drawable/detail_china_eat_image_bg_right" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_img"
        android:layout_alignStart="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginLeft="@dimen/padding_tiny"
        android:src="@drawable/ei_ic_good" />
</RelativeLayout>