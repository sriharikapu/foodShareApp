<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg">
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/normal_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/ff_ic_back_pressed"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_centerHorizontal="true"
             android:textColor="#333"
             android:textSize="18dp"
             android:text="详情"/>
       <ImageView
           android:id="@+id/iv_right"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:padding="15dp"
           android:layout_marginRight="50dp"
           android:src="@mipmap/want_eat_detail_share"/>

        <ImageView
            android:id="@+id/iv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/commit_error_img"/>
    </RelativeLayout>
    <ListView
        android:layout_below="@+id/rl_1"
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        style="@style/listViewTheme"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_below="@+id/lv_list"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/contact_is_kong"/>
        <TextView
            android:id="@+id/tv_6"
            android:layout_below="@+id/iv1"
            android:layout_marginTop="10dp"
            android:textColor="#999"
            android:textSize="9dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的好友尚未发布"/>
        <TextView
            android:id="@+id/tv_7"
            android:layout_below="@+id/tv_6"
            android:layout_marginTop="4dp"
            android:textColor="#999"
            android:textSize="9dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于该餐厅的美食动态"/>

    </RelativeLayout>
</RelativeLayout>