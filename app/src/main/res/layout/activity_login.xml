<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    >
  <RelativeLayout
      android:id="@+id/rl_1"
      android:layout_marginTop="17dp"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:background="#fff">
    <View
        android:id="@+id/xian_1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ddd"></View>
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_below="@+id/xian_1"
        android:layout_width="match_parent"
        android:layout_height="44dp">
      <TextView
          android:id="@+id/tv_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:textSize="15dp"
          android:textColor="#333"
          android:layout_marginLeft="15dp"
          android:text="手机号    "/>
      <EditText
          android:id="@+id/ed_phone"
          android:background="@null"
          android:textColorHint="#ddd"
          android:textSize="14dp"
          android:inputType="phone"
          android:layout_marginLeft="91dp"
          android:textCursorDrawable="@drawable/edtext_cursor_style"
          android:hint="请输入手机号"
          android:textColor="#333"
          android:maxLength="11"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />
      <RelativeLayout
          android:id="@+id/iv_phone_delete"
          android:layout_width="50dp"
          android:visibility="gone"
          android:layout_alignParentRight="true"
          android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ed_text_delte"/>
      </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_1"
        android:layout_below="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ddd"></View>
    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_below="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="44dp">
      <TextView
          android:id="@+id/tv_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:textSize="15dp"
          android:text="登录密码"/>
      <EditText
          android:id="@+id/ed_password"
          android:layout_marginLeft="91dp"
          android:background="@null"
          android:textSize="14dp"
          android:textColorHint="#ddd"
          android:hint="请输入登录密码"
          android:maxLength="13"
          android:textCursorDrawable="@drawable/edtext_cursor_style"
          android:inputType="textPassword"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
      <RelativeLayout
          android:id="@+id/iv_pas_delete"
          android:layout_width="50dp"
          android:visibility="gone"
          android:layout_alignParentRight="true"
          android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ed_text_delte"/>
      </RelativeLayout>
    </RelativeLayout>
  </RelativeLayout>

  <TextView
      android:id="@+id/tv_login"
      android:layout_marginTop="27dp"
      android:layout_below="@+id/rl_1"
      android:layout_width="match_parent"
      android:layout_height="44dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:gravity="center"
      android:textSize="16dp"
      android:background="@drawable/logout_press"
      android:textColor="#888"
      android:text="登录"/>

  <TextView
      android:id="@+id/tv_forgot_password"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="15dp"
      android:layout_below="@+id/tv_login"
      android:layout_width="wrap_content"
      android:text="忘记密码"
      android:textSize="13dp"
      android:textColor="@drawable/password_and_regist_text_selector"
      android:layout_height="wrap_content" />
  <TextView
      android:id="@+id/tv_regist"
      android:layout_marginTop="20dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="15dp"
      android:layout_below="@+id/tv_login"
      android:layout_width="wrap_content"
      android:text="注册账号"
      android:textColor="@drawable/password_and_regist_text_selector"
      android:layout_height="wrap_content" />


  <RelativeLayout
      android:id="@+id/rl_weichat"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="180dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true">



    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他方式登录"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:textColor="#d0d0d0"/>
    <View
        android:id="@+id/view_3_2"
        android:layout_width="50dp"
        android:layout_height="0.5dp"
        android:layout_toRightOf="@+id/tv_3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:background="#ccc"
        ></View>
    <View
        android:id="@+id/view_3_1"
        android:layout_width="50dp"
        android:layout_height="0.5dp"
        android:layout_toLeftOf="@+id/tv_3"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:background="#ccc"
        ></View>
  </RelativeLayout>
  <ImageView
      android:id="@+id/iv_wechat_login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/weichat_login_selector"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="110dp"/>
</RelativeLayout>
