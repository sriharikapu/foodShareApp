<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:background="#000000"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"></ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_rec"
            android:background="#22000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/ll_rec"
            android:background="#22000000" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_rec"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ll_rec"
            android:layout_toRightOf="@+id/ll_rec"
            android:background="#22000000" />

        <LinearLayout
            android:id="@+id/ll_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:background="@drawable/shape_cut_image_bg"
            android:layout_centerInParent="true">

            <View
                android:id="@+id/view2"
                android:layout_width="250dp"
                android:layout_height="250dp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_rec"
            android:layout_alignTop="@+id/ll_rec"
            android:layout_toLeftOf="@+id/ll_rec"
            android:background="#22000000" />

    </RelativeLayout>

</FrameLayout>