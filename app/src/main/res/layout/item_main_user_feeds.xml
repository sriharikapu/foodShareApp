<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_share_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_3"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_time"
        android:background="#d5d5d5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="未分享"
        android:textColor="@color/ff_text_gray"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginRight="10dp"
        android:background="@color/image_bg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_img_num"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/iv_img"
        android:layout_alignEnd="@+id/iv_img"
        android:layout_alignRight="@+id/iv_img"
        android:layout_margin="3dp"
        android:background="@drawable/main_user_feeds_img_sum"
        android:gravity="center"
        android:text="12"
        android:textColor="#fff"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_img"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_img"
        android:drawablePadding="6dp"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="@color/ff_text_black"
        android:textSize="16dp" />

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_img">

        <ImageView
            android:id="@+id/iv_rest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/main_user_rest" />

        <TextView
            android:id="@+id/tv_rest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_rest_name"
            android:maxLength="18"
            android:text="楚天在哪里啊楚天在哪里啊楚天在哪里啊里"
            android:textColor="@color/ff_text_gray"
            android:textSize="12dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_3"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_img"
        android:layout_toRightOf="@+id/iv_img"
        android:text="New Text"
        android:textColor="@color/ff_text_gray"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tv_publish_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_title"
        android:layout_centerVertical="true"
        android:layout_margin="7dp"
        android:background="#d5d5d5"
        android:text="未保存"
        android:textColor="@color/ff_text_gray"
        android:textSize="12dp" />

    <com.fengnian.smallyellowo.foodie.View.RotationLoadingView
        android:id="@+id/rotation_loadingview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

</RelativeLayout>