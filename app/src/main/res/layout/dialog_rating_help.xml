<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="29dp"
    android:paddingRight="29dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/ic_dialog_close_rating_help" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:background="@drawable/shape_input"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="36dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="极力推荐"
            android:textColor="#333333"
            android:textSize="13sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginTop="11dp"
            android:isIndicator="true"
            android:maxHeight="13dp"
            android:minHeight="13dp"
            android:numStars="4"
            android:progressDrawable="@drawable/selector_rating_help"
            android:rating="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="9dp"
            android:text="值得专程前往品尝、一定还要再去"
            android:textColor="#333333"

            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="推荐"
            android:textColor="#333333"
            android:textSize="13sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginTop="11dp"
            android:isIndicator="true"
            android:maxHeight="13dp"
            android:minHeight="13dp"
            android:numStars="4"
            android:progressDrawable="@drawable/selector_rating_help"
            android:rating="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="9dp"
            android:text="同类中的优秀餐厅、就餐首选"
            android:textColor="#333333"

            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="一般"
            android:textColor="#333333"
            android:textSize="13sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginTop="11dp"
            android:isIndicator="true"
            android:maxHeight="13dp"
            android:minHeight="13dp"
            android:numStars="4"
            android:progressDrawable="@drawable/selector_rating_help"
            android:rating="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="9dp"
            android:text="还可以接受的餐厅，没有更好的选择是可以去"
            android:textColor="#333333"

            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="差评"
            android:textColor="#333333"
            android:textSize="13sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginTop="11dp"
            android:isIndicator="true"
            android:maxHeight="13dp"
            android:minHeight="13dp"
            android:numStars="4"
            android:progressDrawable="@drawable/selector_rating_help"
            android:rating="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="用餐体验很差不想再去的餐厅"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>