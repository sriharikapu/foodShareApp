<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <RelativeLayout
        android:id="@+id/rv_fail_one"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffb"
        android:visibility="gone"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/no_intnet_img"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/not_net_state"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_below="@+id/rv_fail_one"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/userinfo_defaultbg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/userinfo_top_imgmeng1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/userinfo_top_imgmeng2"
                android:id="@+id/imageView7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/userinfo_top_imgmeng3" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:onClick="onBackPressed"
                android:scaleType="centerInside"
                android:src="@mipmap/ff_ic_back_normal" />
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_alignParentTop="true"
                android:onClick="close"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_close_three_level_page_white" />
            <!--android:drawableLeft="@mipmap/userinfo_add_attention"-->
            <TextView

                android:id="@+id/tv_add_attention"
                style="@style/userinfo_text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="+关注"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="@dimen/ff_text_size_menu" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="@drawable/user_avatar_circle"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar_circle_gray" />
          <TextView
              android:id="@+id/tv_222"
              android:layout_below="@+id/iv_avatar"
              android:layout_width="2dp"
              android:layout_centerHorizontal="true"
              android:layout_height="2dp" />
        <TextView
            android:id="@+id/tv_name"
            style="@style/userinfo_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_avator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="name"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_set_nickname"
            style="@style/userinfo_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="nichulallala"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_222"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="137dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/new_boy_one"
            />

           <ImageView
               android:id="@+id/iv_edit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/tv_name"
               android:src="@mipmap/iv_edit_user_info"
               android:layout_below="@+id/iv_avator"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="8dp"
               android:paddingLeft="5dp"
               android:paddingBottom="8dp"
               android:paddingTop="4dp"
               android:paddingRight="8dp"
               />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dynamic"
                style="@style/userinfo_text_shadow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="动态 0"
                android:textSize="13sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff" />

            <TextView
                android:id="@+id/tv_attention"
                style="@style/userinfo_text_shadow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关注 0"
                android:textSize="13sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff" />

            <TextView
                android:id="@+id/tv_fans"
                style="@style/userinfo_text_shadow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="粉丝 0"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign"
            style="@style/userinfo_text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:lines="1"
            android:layout_marginTop="8dp"
            android:text="122113211313"
            android:textSize="11sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="278dp"
        android:layout_height="28dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/userinfo_tab_check_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_class"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userinfo_tab_check_left"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="品类"
            android:textSize="12dp"
            android:textColor="@color/userinfo_tab" />

        <RadioButton
            android:id="@+id/rb_area"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userinfo_tab_check_right"
            android:button="@null"
            android:gravity="center"
            android:textSize="12dp"
            android:text="区域"
            android:textColor="@color/userinfo_tab" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/fl_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rg_tab"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/to_top" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fl_class"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rg_tab">

        <com.fengnian.smallyellowo.foodie.widgets.PieChart
            android:id="@+id/pc_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.fengnian.smallyellowo.foodie.widgets.ArcVisView
            android:id="@+id/avv_meng"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_class_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="品类"
                android:textColor="@color/ff_text_gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="11dp"
                android:text="美食清单"
                android:textColor="@color/ff_text_black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/top1" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/contact_is_kong"/>

            <TextView
                android:id="@+id/tv_2"
                android:layout_below="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#999"
                android:textSize="14dp"
                android:text="他还没有美食记录"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>