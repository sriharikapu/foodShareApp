<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_point_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableLeft="@mipmap/point_rular_img"
        android:drawablePadding="3dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="积分规则"
        android:textColor="#888888"/>

    <RelativeLayout
        android:id="@+id/rl_bg_cir"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/kongxin_circle">
        <ImageView
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:background="@drawable/shixin_circle"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_1"
            android:layout_marginTop="36dp"
            android:textColor="@color/white_bg"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"/>
        <TextView
            android:id="@+id/tv_points"
            android:textColor="@color/white_bg"
            android:textSize="36dp"
            android:layout_below="@+id/tv_1"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_member_benefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/member_benefits_img"
        android:drawablePadding="10dp"
        android:text="会员福利"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:textColor="#888"
        android:paddingBottom="7dp"
        android:layout_below="@+id/rl_bg_cir"
        android:background="@drawable/pointer_rule_selector"/>
   <View
       android:id="@+id/view_1"
       android:layout_below="@+id/tv_member_benefits"
       android:layout_width="match_parent"
       android:layout_marginTop="19dp"
       android:layout_height="1dp"
       android:background="#ddd"></View>
    <View
        android:id="@+id/line_1"
        android:layout_below="@+id/view_1"
        android:layout_width="match_parent"
        android:background="@color/normal_bg"
        android:layout_height="10dp">
    </View>
    <View
        android:id="@+id/view_2"
        android:layout_below="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ddd"></View>
    <View
        android:layout_below="@+id/line_1"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_toLeftOf="@+id/tv_2"
        android:background="#ddd"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></View>

    <TextView
        android:id="@+id/tv_2"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="积分明细"
        android:textColor="#888888"
        />
    <View
        android:layout_below="@+id/line_1"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_toRightOf="@+id/tv_2"
        android:background="#ddd"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"></View>
</RelativeLayout>