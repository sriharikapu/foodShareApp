<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/iv_xiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        />
        <ImageView
            android:id="@+id/iv_guan"
            android:layout_toRightOf="@+id/iv_xiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/iv_da"
            android:layout_toRightOf="@+id/iv_guan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>



     <TextView
         android:id="@+id/tv_title"
         android:layout_below="@+id/iv_img"
         android:layout_marginTop="8dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="有味道的地道美食"
         android:textSize="14dp"
         android:textColor="#333"/>
      <LinearLayout
          android:id="@+id/lin_1_1"
          android:layout_marginTop="1dp"
          android:layout_below="@+id/tv_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:orientation="horizontal">
          <com.fengnian.smallyellowo.foodie.widgets.CustomRatingBar
              android:id="@+id/rating_bar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal" />
           <TextView
               android:id="@+id/tv_stervl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="#ff5b00"
               android:layout_marginLeft="5dp"
               android:textSize="10dp"
               android:text="2.0"/>
      </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_1_1"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_food_type"
        android:textSize="11dp"
        android:textColor="#777"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"

        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="日本料理"/>
    <View
        android:id="@+id/view_xian1"
        android:layout_below="@+id/tv_title"
        android:layout_width="1dp"
        android:background="#ccc"
        android:layout_height="12dp"></View>


        <TextView
            android:id="@+id/tv_avarge_money"
            android:layout_toLeftOf="@+id/view_xian1"
            android:textSize="11dp"
            android:text="119/人"
            android:textColor="#777"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/view_xian2"
            android:layout_below="@+id/tv_title"
            android:layout_width="1dp"
            android:background="#ccc"
            android:layout_height="12dp"></View>
    <TextView
        android:id="@+id/tv_number_good_friends_share"
        android:textSize="11dp"
        android:textColor="#777"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="5位好友分享过"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_1111"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_below="@+id/lin_1"
        android:layout_marginTop="9dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_address"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/iv_location_img"
       />
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:textColor="#777"
        android:layout_centerVertical="true"
        android:maxLength="30"
        android:text="朝阳公园朝阳路35号"
        />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:background="#ccc"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>